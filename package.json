{
  "name": "iphone-daddy",
  "version": "1.0.0",
  "description": "E-commerce website for iPhone Daddy selling iPhones and merchandise",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "start": "node backend/server.js",
    "install-all": "concurrently \"npm install\" \"cd frontend && npm install\" \"cd backend && npm install\"",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "ecommerce",
    "iphone",
    "merchandise"
  ],
  "author": "iPhone Daddy",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^11.0.1",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
